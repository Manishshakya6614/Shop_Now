<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Background with padding for shadow -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light gray background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
